# =============================================================================
# NAMC NorCal Member Portal Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_URL="postgresql://username:password@localhost:5432/namc_portal"

# Database Pool Configuration
DATABASE_POOL_MIN=5
DATABASE_POOL_MAX=20

# =============================================================================
# Authentication & Security
# =============================================================================
JWT_SECRET="your-super-secret-jwt-key-here"
NEXTAUTH_SECRET="your-nextauth-secret-here"
NEXTAUTH_URL="http://localhost:3000"

# JWT Token Expiration (in days)
JWT_EXPIRES_IN=7

# Password hashing rounds for bcrypt
BCRYPT_ROUNDS=12

# Session Secret for Express sessions
SESSION_SECRET="your-session-secret-here"

# =============================================================================
# HubSpot Integration Configuration
# =============================================================================

# HubSpot Private App Access Token
# Generate from: HubSpot Account Settings > Integrations > Private Apps
# Required scopes: crm.objects.contacts.read, crm.objects.contacts.write, 
#                  crm.objects.deals.read, crm.objects.deals.write, 
#                  automation, webhooks, content
HUBSPOT_API_KEY="your-hubspot-private-app-access-token"

# HubSpot Portal ID (Hub ID)
# Found in: HubSpot Account Settings > Account Setup > Account Defaults
HUBSPOT_PORTAL_ID=12345678

# HubSpot OAuth Configuration (if using OAuth instead of private app)
HUBSPOT_CLIENT_ID="your-hubspot-app-client-id"
HUBSPOT_CLIENT_SECRET="your-hubspot-app-client-secret"
HUBSPOT_REDIRECT_URI="http://localhost:3000/api/auth/hubspot/callback"

# HubSpot Webhook Configuration
# Your application's base URL for webhook endpoints
HUBSPOT_WEBHOOK_BASE_URL="https://your-domain.com"
HUBSPOT_WEBHOOK_SECRET="your-webhook-verification-secret"

# Email Configuration
FROM_EMAIL="noreply@namc-norcal.org"
FROM_NAME="NAMC NorCal"
REPLY_TO_EMAIL="info@namc-norcal.org"

# SMS (Twilio)
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_PHONE_NUMBER="+1234567890"

# File Storage (AWS S3)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-west-2"
AWS_S3_BUCKET="namc-portal-files"

# Payments (Stripe)
STRIPE_SECRET_KEY="your-stripe-secret-key"
STRIPE_PUBLISHABLE_KEY="your-stripe-publishable-key"
STRIPE_WEBHOOK_SECRET="your-stripe-webhook-secret"

# AI/ML Services
OPENAI_API_KEY="your-openai-api-key"
PINECONE_API_KEY="your-pinecone-api-key"
PINECONE_ENVIRONMENT="us-west1-gcp"

# Search (Elasticsearch)
ELASTICSEARCH_URL="http://localhost:9200"
ELASTICSEARCH_USERNAME="elastic"
ELASTICSEARCH_PASSWORD="your-elasticsearch-password"

# Redis (Caching & Sessions)
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD=""
REDIS_DB="0"
REDIS_URL="redis://localhost:6379"

# Monitoring
SENTRY_DSN="your-sentry-dsn"
DATADOG_API_KEY="your-datadog-api-key"

# External APIs
GOOGLE_MAPS_API_KEY="your-google-maps-api-key"
MAPBOX_ACCESS_TOKEN="your-mapbox-access-token"

# Development
NODE_ENV="development"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_API_URL="http://localhost:3000/api"

# =============================================================================
# Workflow Automation Configuration
# =============================================================================

# HubSpot Workflow Settings
WORKFLOW_EXECUTION_TIMEOUT_MS=30000
WORKFLOW_RETRY_ATTEMPTS=3
WORKFLOW_BATCH_SIZE=50

# Automation Triggers
ENGAGEMENT_SCORE_THRESHOLD=25
RISK_ASSESSMENT_INTERVAL_DAYS=30
RENEWAL_REMINDER_ADVANCE_DAYS=30

# Member Analytics
ANALYTICS_SYNC_INTERVAL_HOURS=6
ENGAGEMENT_TRACKING_ENABLED=true
MEMBER_JOURNEY_TRACKING=true

# =============================================================================
# NAMC-Specific Configuration
# =============================================================================

# NAMC Business Configuration
NAMC_CHAPTER_NAME="Northern California"
NAMC_CHAPTER_CODE="NORCAL"
NAMC_FISCAL_YEAR_START="07-01"

# Member Management
DEFAULT_MEMBER_TYPE="REGULAR"
MEMBER_RENEWAL_PERIOD_MONTHS=12
MEMBER_GRACE_PERIOD_DAYS=30

# Project Management
PROJECT_BID_DEADLINE_BUFFER_DAYS=2
PROJECT_NOTIFICATION_ADVANCE_DAYS=7

# Event Management
EVENT_REGISTRATION_CUTOFF_HOURS=24
MAX_EVENT_CAPACITY=500

# Service Requests
SERVICE_REQUEST_AUTO_EXPIRE_DAYS=90
SERVICE_REQUEST_FOLLOWUP_DAYS=7

# =============================================================================
# API Configuration
# =============================================================================

# Backend API Base URL
NEXT_PUBLIC_API_URL="http://localhost:8000"

# Frontend Application Base URL
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Configuration
CORS_ORIGIN="http://localhost:3000"

# =============================================================================
# Cache Configuration
# =============================================================================

# Cache TTL Settings (in seconds)
CACHE_DEFAULT_TTL=3600
CACHE_MEMBER_DATA_TTL=1800
CACHE_PROJECT_DATA_TTL=900
CACHE_WORKFLOW_DATA_TTL=300

# Cache Prefixes
CACHE_PREFIX_MEMBERS="namc:members:"
CACHE_PREFIX_PROJECTS="namc:projects:"
CACHE_PREFIX_WORKFLOWS="namc:workflows:"

# =============================================================================
# Feature Flags
# =============================================================================

# Enable/disable specific features
FEATURE_HUBSPOT_INTEGRATION=true
FEATURE_AI_RECOMMENDATIONS=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_AUTOMATED_WORKFLOWS=true
FEATURE_MEMBER_PORTAL_V2=true

# Beta Features
BETA_PROJECT_MATCHING_AI=false
BETA_PREDICTIVE_ANALYTICS=false
BETA_AUTOMATED_REPORTING=false

# Legacy Feature Flags
NEXT_PUBLIC_ENABLE_AI_FEATURES="true"
NEXT_PUBLIC_ENABLE_ANALYTICS="true"
NEXT_PUBLIC_ENABLE_NOTIFICATIONS="true"

# =============================================================================
# Performance Configuration
# =============================================================================

# Database Query Timeouts
DB_QUERY_TIMEOUT_MS=5000
DB_CONNECTION_TIMEOUT_MS=10000

# API Response Timeouts
API_TIMEOUT_MS=30000
WEBHOOK_TIMEOUT_MS=10000

# Pagination Limits
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# =============================================================================
# Security Configuration
# =============================================================================

# Security Headers
HELMET_ENABLED=true
RATE_LIMITING_ENABLED=true
CSRF_PROTECTION_ENABLED=true

# Content Security Policy
CSP_ENABLED=true
CSP_REPORT_URI="https://your-domain.com/api/csp-violation"

# IP Whitelist for admin functions (comma-separated)
ADMIN_IP_WHITELIST="127.0.0.1,::1"

# =============================================================================
# Integration Webhooks
# =============================================================================

# External system webhooks for integration
ACCOUNTING_SYSTEM_WEBHOOK="https://accounting.example.com/webhook"
CRM_SYSTEM_WEBHOOK="https://crm.example.com/webhook"
PAYMENT_PROCESSOR_WEBHOOK="https://payments.example.com/webhook"

# =============================================================================
# Development Tools
# =============================================================================

# Debug Configuration
DEBUG_ENABLED=false
DEBUG_LEVEL="info"
VERBOSE_LOGGING=false

# Development Tools
PRISMA_STUDIO_PORT=5555
STORYBOOK_PORT=6006

# Hot Reload Configuration
HOT_RELOAD_ENABLED=true
LIVE_RELOAD_ENABLED=true

# Application Environment
NODE_ENV="development"

# =============================================================================
# End of Configuration
# =============================================================================

# Note: Never commit actual values to version control
# Use a secure method to manage production secrets
# Consider using tools like AWS Secrets Manager, Azure Key Vault, or HashiCorp Vault 